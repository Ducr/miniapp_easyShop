.goods-tab Goodstab .goods-content .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ccc;
}
.goods-tab Goodstab .goods-content .goods-item .goods-image {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-tab Goodstab .goods-content .goods-item .goods-image image {
  /* 给个固定大小，图片过渡时不会变形扭曲 */
  width: 160rpx;
  height: 160rpx;
}
.goods-tab Goodstab .goods-content .goods-item .goods-info {
  flex: 2;
  padding: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* 设置文本第二行溢出时变为 ... */
}
.goods-tab Goodstab .goods-content .goods-item .goods-info .goods-name {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-tab Goodstab .goods-content .goods-item .goods-info .goods-price {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: var(--themeColor);
}
.goods-tab .bottom-remind {
  text-align: center;
  color: #999;
}
